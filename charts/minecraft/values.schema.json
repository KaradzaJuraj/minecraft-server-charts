{
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": ["minecraftServer", "initContainers", "sidecarContainers"],
    "properties": {
        "minecraftServer": {
            "type": "object",
            "properties": {
                "eula": {
                    "type": "boolean",
                    "description": "This must be overridden since we can't accept this for the user."
                },
                "version": {
                    "type": "string",
                    "enum": ["LATEST", "SNAPSHOT"],
                    "title": "Minecraft version for all server types",
                    "description": "Minecraft version such as LATEST, SNAPSHOT, or a specific version (e.g., '1.7.9')."
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "VANILLA",
                        "FORGE",
                        "SPIGOT",
                        "BUKKIT",
                        "PAPER",
                        "FTBA",
                        "SPONGEVANILLA",
                        "AUTO_CURSEFORGE"
                    ],
                    "title": "Server type",
                    "description": "Server type to run."
                },
                "difficulty": {
                    "type": "string",
                    "enum": ["peaceful", "easy", "normal", "hard"],
                    "description": "The difficulty level of the server."
                },
                "maxPlayers": {
                    "type": "integer",
                    "description": "Maximum number of connected players."
                },
                "maxWorldSize": {
                    "type": "integer",
                    "description": "The maximum possible size in blocks, expressed as a radius, that the world border can obtain."
                },
                "allowNether": {
                    "type": "boolean",
                    "description": "Allows players to travel to the Nether."
                },
                "announcePlayerAchievements": {
                    "type": "boolean",
                    "description": "Allows server to announce when a player gets an achievement."
                },
                "enableCommandBlock": {
                    "type": "boolean",
                    "description": "Enables command blocks."
                },
                "forcegameMode": {
                    "type": "boolean",
                    "description": "If true, players will always join in the default gameMode even if they were previously set to something else."
                },
                "generateStructures": {
                    "type": "boolean",
                    "description": "Defines whether structures (such as villages) will be generated."
                },
                "hardcore": {
                    "type": "boolean",
                    "description": "If true, players will be set to spectator mode if they die."
                },
                "spawnAnimals": {
                    "type": "boolean",
                    "description": "Determines if animals will be able to spawn."
                },
                "spawnMonsters": {
                    "type": "boolean",
                    "description": "Determines if monsters will be spawned."
                },
                "spawnNPCs": {
                    "type": "boolean",
                    "description": "Determines if villagers will be spawned."
                },
                "spawnProtection": {
                    "type": "integer",
                    "description": "Sets the area that non-ops cannot edit (0 to disable)."
                },
                "viewDistance": {
                    "type": "integer",
                    "description": "Max view distance (in chunks)."
                },
                "levelType": {
                    "type": "string",
                    "enum": ["DEFAULT", "FLAT", "LARGEBIOMES", "AMPLIFIED", "CUSTOMIZED"],
                    "description": "Type of world generation."
                },
                "pvp": {
                    "type": "boolean",
                    "description": "If true, enable player-vs-player damage."
                },
                "onlineMode": {
                    "type": "boolean",
                    "description": "Check accounts against Minecraft account service."
                },
                "motd": {
                    "type": "string",
                    "description": "Message of the Day."
                },
                "maxBuildHeight": {
                    "type": "integer",
                    "description": "The maximum height in which building is allowed."
                },
                "maxTickTime": {
                    "type": "integer",
                    "description": "The maximum number of milliseconds a single tick may take before the server watchdog stops the server with the message. -1 disables this entirely."
                },
                "overrideServerProperties": {
                    "type": "boolean",
                    "description": "If set to true, the server configuration will be overridden each time the container starts up."
                },
                "memory": {
                    "type": "string",
                    "description": "Memory allocation for the server (e.g., '1024M')."
                }
            },
            "required": ["eula"]
        },
        "mcbackup": {
            "type": "object",
            "properties": {
                "backupMethod": {
                    "type": "string",
                    "enum": ["tar", "restic", "rclone", "rsync"],
                    "description": "Backup methods. See https://github.com/itzg/docker-mc-backup for details."
                },
                "resticRepository": {
                    "type": "string",
                    "description": "The repository for Restic backups."
                }
            }
        },
        "initContainers": {
            "type": "array",
            "description": "Array of init containers to include in the deployment.",
            "items": {
                "type": ["object", "string"]
            }
        },
        "sidecarContainers": {
            "type": "array",
            "description": "Array of additional sidecars to include in the deployment.",
            "items": {
                "type": ["object", "string"]
            }
        },
        "extraDeploy": {
            "type": "array",
            "description": "Array of additional objects to deploy with the release.",
            "items": {
                "type": ["object", "string"]
            }
        },
        "extraPodSpec": {
            "type": "object",
            "description": "Extra fields to set on the pod."
        }
    }
}
